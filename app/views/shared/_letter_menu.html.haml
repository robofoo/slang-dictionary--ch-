.letter_menu
  %span.letters.random
    = link_to t(:'letter-menu.random'), root_path, :class => params[:action] == 'home' && params[:controller] == 'pages' ? "active" : ''
  &nbsp; &nbsp;
  %span.letters
    - [*'a'..'z'].each do |letter|
      = link_to letter, define_path({ :char => letter }), :class => letter == @char ? "active" : ''
  %span.letters
    = link_to '#', define_path( {:char => '#' }), :class => @char == '#' ? "active" : ''
%hr

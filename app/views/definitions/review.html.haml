-if @definition.present?
  .review
    .well
      %table#review
        %tr
          %td#desc
            = t :'definitions.review.desc'
          %td
            = button_to t(:'definitions.review.accept'), accept_definition_path(@definition), :method => :get, :class => 'btn btn-success', :style => "float:left"
          %td
            = button_to t(:'definitions.review.reject'), reject_definition_path(@definition), :method => :get, :class => 'btn btn-danger', :style => "float:left"
          %td
            = button_to t(:'definitions.review.do-not-know'), review_definitions_path, :method => :get, :class => 'btn', :style => "float:left"

  = render :partial => 'definitions/definitions', :object => [@definition]
-else
  = render :partial => 'shared/definition_not_found'

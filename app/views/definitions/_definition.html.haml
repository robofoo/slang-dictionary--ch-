-#:show_votes determines wheither or not to show voting buttons

-# default to hiding vote buttons
- show_votes = false unless show_votes

-if show_votes
  .row.definitions
    .span3
      .chinese
        =definition.word
      .pinyin
        =definition.pinyin
    .span4
      =simple_format definition.definition
    .span4
      .example
        =simple_format definition.example
    .span1
      .voting
        .up
          = image_tag asset_path('vote_up.png'), { :data_def_id => definition.id }
        .score
          = definition.plusminus
        .down
          = image_tag asset_path('vote_down.png'), { :data_def_id => definition.id }
-else
  .row.definitions
    .span4
      .chinese
        =definition.word
      .pinyin
        =definition.pinyin
    .span4
      =simple_format definition.definition
    .span4
      .example
        =simple_format definition.example
%hr

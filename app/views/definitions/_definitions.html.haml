-#:show_votes determines wheither or not to show voting buttons

-# default to hiding vote buttons
- show_votes = false unless show_votes

.row.definitions_header
  .span3
    = t :'partial.definitions.word'
  .span4
    = t :'partial.definitions.definition'
  .span4
    = t :'partial.definitions.example'
  .span1
    .voting
    -if show_votes
      = t :'partial.definitions.score'
    -else
      &nbsp;

= render :partial => 'definitions/definition', :collection => definitions, :locals => { :show_votes => show_votes }
